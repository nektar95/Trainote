<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context="com.nektar.android.trainote.TrainoteActivity">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
                  android:orientation="horizontal"
                  android:layout_width="wrap_content"
                  android:layout_gravity="center"
                  android:layout_height="wrap_content"
                  android:background="@color/backDays"
                  android:gravity="center_horizontal">
        <ImageView
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:padding="30dp"
            android:background="#B22222"
            android:id="@+id/day_1"
            android:layout_margin="5dp"/>
        <ImageView
            android:layout_width="42dp"
            android:id="@+id/day_2"
            android:layout_height="42dp"
            android:padding="30dp"
            android:background="#B22222"
            android:layout_margin="5dp"/>
        <ImageView
            android:id="@+id/day_3"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:background="#B22222"
            android:layout_margin="5dp"/>
        <ImageView
            android:id="@+id/day_4"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:background="#B22222"
            android:layout_margin="5dp"/>
        <ImageView
            android:id="@+id/day_5"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:background="#B22222"
            android:layout_margin="5dp"/>
        <ImageView
            android:id="@+id/day_6"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:background="#B22222"
            android:layout_margin="5dp"/>
        <ImageView
            android:id="@+id/day_7"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:background="#B22222"
            android:layout_margin="5dp"/>

    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_gravity="center"
        android:layout_height="wrap_content"
        android:background="@color/backDays"
        android:gravity="center_horizontal">
        <ImageView
            android:layout_width="42dp"
            android:layout_height="5dp"
            android:background="@color/monday"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"/>
        <ImageView
            android:layout_width="42dp"
            android:layout_height="5dp"
            android:background="@color/tuesday"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"/>
        <ImageView
            android:layout_width="42dp"
            android:layout_height="5dp"
            android:background="@color/wednesday"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"/>
        <ImageView
            android:layout_width="42dp"
            android:layout_height="5dp"
            android:background="@color/thursday"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"/>
        <ImageView
            android:layout_width="42dp"
            android:layout_height="5dp"
            android:background="@color/friday"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"/>
        <ImageView
            android:layout_width="42dp"
            android:layout_height="5dp"
            android:background="@color/saturday"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"/>
        <ImageView
            android:layout_width="42dp"
            android:layout_height="5dp"
            android:background="@color/sunday"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"/>

    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_gravity="center"
        android:layout_height="wrap_content"
        android:background="@color/backDays"
        android:gravity="center_horizontal"

        android:weightSum="5">
        <TextView
            android:layout_width="42dp"
            android:background="@drawable/ic_settings_applications_black_24dp"
            android:layout_height="42dp"
            android:textSize="28dp"
            android:id="@+id/week_settings"
            android:textAlignment="center"
            android:layout_marginBottom="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:background="@drawable/week_squar"
            android:layout_height="42dp"
            android:textSize="28dp"
            android:textAlignment="center"
            android:layout_marginBottom="5dp"
            android:layout_marginRight="5dp"
            android:layout_weight="4"
            android:gravity="end"
            android:textStyle="bold"
            android:id="@+id/week_area"/>
    </LinearLayout>
    <android.support.v7.widget.RecyclerView
        android:layout_marginTop="10dp"
        android:id="@+id/trainote_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFFFFF"/>
</LinearLayout>
<android.support.design.widget.FloatingActionButton
    android:id="@+id/add_button"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="bottom|end"
    android:layout_margin="@dimen/fab_margin"
    android:src="@android:drawable/ic_input_add"/>
</android.support.design.widget.CoordinatorLayout>

